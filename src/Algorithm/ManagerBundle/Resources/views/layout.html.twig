<html> 
    <head>
        <meta charset="utf-8">
        <title>Algo Manager</title>
        <meta name="viewport" content="user-scalable=no, initial-scale = 1, minimum-scale = 1, maximum-scale = 1, width=device-width">
        
        <link rel="shortcut icon" href="{{ asset('icoons/favicon.ico') }}">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('icoons/apple-touch-icon-144x144-precomposed.png')}}">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('icoons/apple-touch-icon-114x114-precomposed.png')}}">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('icoons/apple-touch-icon-72x72-precomposed.png')}}">
        <link rel="apple-touch-icon-precomposed" href="{{ asset('icoons/apple-touch-icon-57x57-precomposed.png')}}">
        
        <!--<link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>-->
        <link rel="stylesheet" href="{{ asset('bundles/wiki/fonts/style.css') }}" type="text/css" />
        
        {% stylesheets debug=false filter='lessphp' output='bundles/wiki/css/algo_style.css'
        '@AlgorithmManagerBundle/Resources/less/algo_main.less'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        
        <script type="text/javascript" src="{{ asset('bundles/wiki/js/jquery-2.1.0.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/wiki/js/checkbox.js') }}"></script>
                    
    </head>

    <body>
        
        <header class="header">
            
            <h1>
                <object type="image/svg+xml" data="{{ asset('bundles/wiki/assets/svg/algo_logo.svg') }}" width="40" height="14"></object>
            </h1>
            
            {% for message in app.session.flashbag.get('valide') %}
                <span class="display-message">{{ message }}</span>
            {% endfor %}
            
            {% for message in app.session.flashbag.get('error') %}
                <span class="display-message error">{{ message }}</span>
            {% endfor %}
            
            <div class="user">
                Bonjour {{ app.user.username }} <span>{{ app.user.firstname|slice(0, 1) }}</span>
                <div class="user-expend">
                    
                    <ul>
                        <li><a href="{{ path('algorithm_wiki_settings') }}">Paramètres</a></li>
                        <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                    </ul>
                    
                </div>
            </div>
            
        </header>       
            
        {%block nav %}{% endblock %}
                      
        <section id="wrapper">
            
            {%block breadcrumb %}{% endblock %}
            
            <section id="data-content">

            {%block body %}{% endblock %}
            
            </section>

        </section>
            
        <section class="algo-info">

            <div class="algo-info-details">

                <span class="close-infos">Fermer</span>

                <p>Algo Manager<br><br>Développement & Design : <a target="_blank" href="http://nicolas.algorithmstudio.fr">Nicolas Passaquet</a><br>Développement : <a target="_blank" href="http://www.bonneville.be/">Benoit Bonneville</a></p>

                <p>Publier sous licence GPL v2 - Développer avec :</p>
                <ul>

                    <li><a target="_blank" href="http://symfony.com/"><img src="{{ asset('bundles/wiki/assets/logo/sf.png') }}" width="30" height="30"></a></li>
                    <li><a target="_blank" href="http://www.w3.org/TR/html5/"><span class="icon-html5"></span></a></li>
                    <li><a target="_blank" href="http://www.w3schools.com/css/css3_intro.asp"><span class="icon-css3"></span></a></li>
                    <li><a target="_blank" href="http://leafo.net/lessphp/"><img src="{{ asset('bundles/wiki/assets/logo/less.png') }}" width="72" height="30"></a></li>
                    <div class="clear"></div>

                </ul>

            </div>

        </section>
                    
        <script type="text/javascript">

            var search_path = "{{ path('algorithm_wiki_search') }}";

        </script>    
        
        <script type="text/javascript" src="{{ asset('bundles/wiki/js/algo.main.app.js') }}"></script>
            
    </body>
</html>